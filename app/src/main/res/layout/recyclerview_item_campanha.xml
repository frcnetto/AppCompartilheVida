<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/campanha_item_cid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"/>
        <TextView
            android:id="@+id/campanha_item_uid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"/>

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_margin="8dp"
                android:textStyle="bold"
                android:textSize="@dimen/text_view_size_normal"
                android:text="@string/nome"/>
            <android.support.v7.widget.Toolbar
                android:id="@+id/card_toolbar"
                android:layout_width="match_parent"
                android:background="@android:color/white"
                android:layout_height="27dp"
                android:layout_gravity="center|start"/>
        </LinearLayout>

        <TextView
            android:id="@+id/campanha_item_beneficiario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="@dimen/text_view_size_normal"
            android:layout_gravity="top|start"
            android:text="@string/some_date"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_margin="8dp"
                android:textStyle="bold"
                android:textSize="@dimen/text_view_size_normal"
                android:text="@string/telefone2"/>

            <TextView
                android:id="@+id/campanha_item_telefone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:textSize="@dimen/text_view_size_normal"
                android:layout_gravity="top|start"
                android:text="@string/some_date"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:textSize="@dimen/text_view_size_normal"
                android:layout_gravity="top|start"
                android:textStyle="bold"
                android:text="@string/cidade"/>

            <TextView
                android:id="@+id/campanha_item_cidade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:textSize="@dimen/text_view_size_normal"
                android:layout_gravity="top|start"
                android:text="@string/some_date"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:textSize="@dimen/text_view_size_normal"
                android:layout_gravity="top|start"
                android:textStyle="bold"
                android:text="@string/estado"/>

            <TextView
                android:id="@+id/campanha_item_estado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:textSize="@dimen/text_view_size_normal"
                android:layout_gravity="top"
                android:text="@string/some_date"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:textSize="@dimen/text_view_size_normal"
                android:layout_gravity="top|start"
                android:textStyle="bold"
                android:text="@string/tipo_sanguineo"/>

            <TextView
                android:id="@+id/campanha_item_tpsanquineo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:textSize="@dimen/text_view_size_normal"
                android:layout_gravity="top|start"
                android:text="@string/some_date"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>